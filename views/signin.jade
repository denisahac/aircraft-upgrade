doctype html
html(lang='en')
	body
		title= title
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width', initial-scale='1')
		meta(name='description', content='')
		meta(name='author', content='')
		
		<!-- libs styles -->
		link(rel='stylesheet', href='/css/vendor/development/bootstrap.css')

		<!-- custom styles -->
		link(rel='stylesheet', href='/css/cover.css')
		link(rel='stylesheet', href='/css/app.css')

		<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- [if lt IE 9]>
		script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
		script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
		<!--[endif]-->
	body
		div(class='site-wrapper')
			div(class='site-wrapper-inner')
				div(class='cover-container')
					div(class='masthead clearfix')
						div(class='inner')
							h3(class='masthead-brand') Aircraft Upgrade
							ul(class='nav masthead-nav')
								li: a(href='/', title='Welcome to Aircraft Upgrade') Home
								li: a(href='/about', title='About Us') About
								li: a(href='/contact', title='Contact Us') Contact
								li.active: a(href='/signin', title='Sign In') Signin
								li: a(href='/signup', title='Sign Up') Signup

					div(class='inner cover')
						div(class='row')
							div(class='col-lg-12 well', id='login-container')
								legend Please Sign In
								if hasError
									div(class='alert alert-danger alert-dismissable')
										button(type='button', class='close', data-dismiss='alert', aria-hidden='true') &times;
										strong Oh snap! 
										=errorMessage
								form(method='post', action='/signin', role='form')
									div(class='form-group')
										label(for='username', class='control-label') Email
										input(type='text', class='form-control', id='username', name='username', placeholder='Email')
									div(class='form-group')
										label(for='password', class='control-label') Password
										input(type='password', class='form-control', id='password', name='password', placeholder='Password')
									button(type='submit', class='btn btn-info') Sign In

					div(class='mastfoot')
						div(class='inner')
							p
								| &copy; 2014 
								a(href='/', title='Welcome to Aircraft Upgrade') Aircraft Upgrade
								|, by 
								a(href='https://facebook.com/den.isahac') den.isahac

		<!-- libs scripts -->
		script(src='/js/vendor/development/jquery.js')
		script(src='/js/vendor/development/bootstrap.js')

		<!-- custom scripts -->

